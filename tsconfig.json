{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2017",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "baseUrl": "./src",
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "*": ["src/@types/*"]
    },
    "skipLibCheck": true // ビルドが通らないので一旦無効化
  }
}